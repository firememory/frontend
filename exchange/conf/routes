# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

GET     /                           controllers.MainController.index()
GET     /trade                       controllers.MainController.trade()
GET     /market                       controllers.MainController.market()
GET     /user                       controllers.MainController.user()
GET     /register                   controllers.MainController.register()
GET     /login                      controllers.MainController.login()
GET     /open                       controllers.MainController.open()

GET     /account/logout              controllers.UserController.logout()
POST    /account/login              controllers.UserController.login()
POST    /account/register           controllers.UserController.register()

POST    /trade/bid               controllers.MessageController.submitOrder()
POST    /trade/ask               controllers.MessageController.submitOrder()
GET     /trade/order/cancel/*id   controllers.MessageController.cancelOrder(id)
POST    /account/deposit            controllers.MessageController.deposit()
POST    /account/withdrawal            controllers.MessageController.withdrawal()

# API routes
GET     /api/depth                  controllers.MessageController.depth()
GET     /api/*market/ticker         controllers.MessageController.ticker(market)
GET     /api/order                  controllers.MessageController.getUserOrders()
GET     /api/account/*uid           controllers.MessageController.account(uid)
GET     /api/history                controllers.MessageController.history()
GET     /api/transaction            controllers.MessageController.transaction()
GET     /api/userTransaction        controllers.MessageController.userTransaction()
GET     /api/order/*oid/transaction   controllers.MessageController.orderTransaction(oid)
GET     /api/*currency/deposit/*uid   controllers.MessageController.depositHistory(currency, uid)
GET     /api/*currency/withdrawal/*uid   controllers.MessageController.withdrawalHistory(currency, uid)
GET     /api/open/data/*type       controllers.MessageController.exportDataFiles(type)

GET     /data/*file                 controllers.MainController.data(file)
GET     /api/*file                  controllers.Assets.at(path="/public/data", file)

# Default path to /public
GET     /*file                  controllers.Assets.at(path="/public", file)