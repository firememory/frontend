# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

GET     /                           controllers.MainController.index()
GET     /trade                       controllers.MainController.trade()
GET     /market                       controllers.MainController.market()
GET     /user                       controllers.MainController.user()
GET     /register                   controllers.MainController.register()

GET    /user/logout              controllers.UserController.logout()
POST    /user/login              controllers.UserController.login()
POST    /user/register           controllers.UserController.register()

POST    /trade/bid               controllers.MessageController.submitOrder()
POST    /trade/ask               controllers.MessageController.submitOrder()
GET    /trade/order/cancel/*id   controllers.MessageController.cancelOrder(id)
POST    /account/deposit            controllers.MessageController.deposit()

# API routes
GET     /api/depth                  controllers.MessageController.depth()
GET     /api/ticker                 controllers.MessageController.tickers()
GET     /api/order                  controllers.MessageController.getUserOrders()
GET     /api/account                controllers.MessageController.account()
GET     /api/history                controllers.MessageController.history()
GET     /api/transaction            controllers.MessageController.transaction()
GET     /api/userTransaction        controllers.MessageController.userTransaction()

GET     /api/*file                controllers.Assets.at(path="/public/data", file)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)

# Default path to /public
GET     /*file                  controllers.Assets.at(path="/public", file)